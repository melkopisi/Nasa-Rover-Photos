<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="12dp"
    android:paddingVertical="16dp"
    >

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_rover_photo_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:gravity="start"
      android:textStyle="bold"
      android:textColor="?colorOnSecondary"
      android:textSize="18sp"
      tools:text="@tools:sample/full_names"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_rover_details_earth_date_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_rover_photo_name"
      android:gravity="start"
      android:text="@string/rover_photo_date_title"
      android:textColor="?colorOnSecondary"
      android:textSize="14sp"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_rover_details_earth_date_value"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_rover_details_earth_date_title"
      android:gravity="start"
      android:textColor="@color/light_grey"
      android:textSize="16sp"
      tools:text="@tools:sample/date/ddmmyy"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_rover_camera_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_rover_details_earth_date_value"
      android:gravity="start"
      android:text="@string/rover_camera_info_title"
      android:textColor="?colorOnSecondary"
      android:textSize="18sp"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_rover_details_camera_short_name_value"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_rover_camera_title"
      android:gravity="start"
      android:textColor="@color/light_grey"
      android:textSize="16sp"
      tools:text="@tools:sample/first_names"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_rover_details_camera_full_name_value"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_rover_details_camera_short_name_value"
      android:gravity="start"
      android:textColor="@color/light_grey"
      android:textSize="16sp"
      tools:text="@tools:sample/first_names"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_rover_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_rover_details_camera_full_name_value"
      android:gravity="start"
      android:text="@string/rover_info_title"
      android:textColor="?colorOnSecondary"
      android:textSize="18sp"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_rover_name_value"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      app:layout_constraintEnd_toEndOf="@id/center_guideline"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_rover_title"
      android:gravity="start"
      android:textColor="@color/light_grey"
      android:textSize="16sp"
      tools:text="@tools:sample/first_names"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_rover_status_value"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toEndOf="@id/center_guideline"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_rover_name_value"
      android:gravity="start"
      android:textColor="@color/light_grey"
      android:textSize="16sp"
      tools:text="@tools:sample/first_names"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_rover_launch_date_value"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@id/center_guideline"
      app:layout_constraintTop_toTopOf="@id/tv_rover_name_value"
      android:gravity="start"
      android:textColor="@color/light_grey"
      android:textSize="16sp"
      tools:text="@tools:sample/date/ddmmyy"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_rover_landing_date_value"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@id/tv_rover_launch_date_value"
      app:layout_constraintTop_toTopOf="@id/tv_rover_status_value"
      android:gravity="start"
      android:textColor="@color/light_grey"
      android:textSize="16sp"
      tools:text="@tools:sample/date/ddmmyy"
      />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/center_guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintGuide_percent="0.5"
      android:orientation="vertical"
      />
</androidx.constraintlayout.widget.ConstraintLayout>